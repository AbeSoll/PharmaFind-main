<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E91E63" /> <!-- Warna semasa ditekan -->
            <corners android:radius="20dp" /> <!-- Corner radius -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Garis tepi putih -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#FF4081" /> <!-- Warna butang biasa -->
            <corners android:radius="20dp" /> <!-- Corner radius -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Garis tepi putih -->
        </shape>
    </item>
</selector>
